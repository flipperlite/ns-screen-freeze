<Page
    navigatingTo="_navigatingTo"
    loaded="_loaded"
    unloaded="_unloaded"
    navigatingFrom="_navigatingFrom"
    navigatedFrom="_navigatedFrom"
    layoutChanged="_layoutChanged"

    xmlns="http://schemas.nativescript.org/tns.xsd">

    <ActionBar>
        <NavigationButton visibility="hidden"></NavigationButton>
        <GridLayout columns="50,*,auto" class="ns-action-bar">
            <Label class="fas" text="&#xf0c9;" tap="{{ showDrawer }}" column="0"/>
            <Label class="action-bar-title" text="Async Example" column="1" />
            <Label class="fas" text="&#xf2f9;" tap="{{ reload }}" column="2"/>
        </GridLayout>
    </ActionBar>

    <GridLayout rows="*" class="page__content">
        <StackLayout row="0" visibility="{{ isWaiting ? 'visible' : 'collapsed' }}">

            <Label class="page__content-placeholder" text="{{ 'Waiting on API (' + responseTime + ' ms)' }}" id="msgWaiting"></Label>
        </StackLayout>

        <StackLayout row="0" visibility="{{ !isWaiting ? 'visible' : 'collapsed' }}">
            <Label class="page__content-icon fas" text="&#xf015;"></Label>
            <Label class="page__content-placeholder" text="{{ id + ' (' + responseTime + ' ms) ' + message }}" id="message"></Label>
        </StackLayout>
    </GridLayout>
</Page>
